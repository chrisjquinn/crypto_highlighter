{
	"name": "Cryptocurrency Highlighter",
	"description": "Highlights cryptocurrency.",
	"version": "1.0.0",
	"manifest_version": 3,
	"permissions": ["tabs"],
	"background": {
    	"service_worker": "background.js"
  	},
  	"content_scripts": [
  		{
  			"matches": ["https://*/*", "http://*/*", "file://*/*"],
  			"js": ["highlighter.js"],
  			"css": ["highlighter.css"]
  		}
  	],
  	"action": {
    	"default_popup": "popup.html",
    	"default_title": "Click to see captured crypto addrs"
  	}
}